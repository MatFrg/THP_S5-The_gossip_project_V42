        <a class="nav-link" href="http://localhost:3000/the_gossip_project/contact">Contact</a>
      </li>
    </ul>
    </div>
    
    <div class="connection-item" >
     <% if current_user %>
              <li class="nav-item nav-link"> <%=current_user.first_name %> is connected
                </li>
              <li class="nav-item nav-link"><%= link_to "Log out", session_path(session[:user_id]), method: :delete %>
              </li>
            <% else %>
              <li class="nav-item nav-link"><%= link_to "Log in", new_session_path %>
              </li>
              <li class="nav-item nav-link"><%= link_to "Sign up", new_user_path %>
              </li>
            <% end %>
      </div>

</nav>



  </head>

  <body>
    <%= yield %>
  </body>
