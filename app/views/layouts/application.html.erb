  <!-- HEADER -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="navbar-brand">Gossip</div>
  <button class="navbar-toggler" type="none" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <div> <%= link_to "Home", gossips_path, class: "nav-link"  %> </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="http://localhost:3000/the_gossip_project/team">Team</a>
